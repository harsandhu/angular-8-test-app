@font-face {
  font-family: Montserrat;
  src: url(assets/fonts/Montserrat-Regular.ttf);
}
body
    font-family Montserrat

.app-button
    padding 5px 10px
    border 2px solid lightgray
    margin 0px 5px
    cursor pointer

.app-card
    border 1px solid lightgray
    border-left 3px solid #ffbc84
    display flex
    flex-direction column
    margin 10px
    width 250px
    flex-wrap wrap
    > * 
        padding 10px
    .heading
        font-size 22px
    .divider
        border-bottom 1px solid lightgray
