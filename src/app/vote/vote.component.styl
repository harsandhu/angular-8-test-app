.app-tab 
    display flex
    flex-direction column
    position relative
    width 95%
    cursor pointer
    justify-content center
    align-items baseline
    margin 5px
    border 2px solid beige
    background #fff
    .heading
        padding 10px
        color maroon
    .tab-details
        border-top 1px solid #f08080
        top 0
        display flex
        flex-direction column
        align-items flex-start
        padding 10px 5px 10px 20px
        font-size 13px
        background darksalmon
        width 93%
        color cornsilk
        .line 
            display flex 
            flex-direction row
            align-items center
            .value
                padding-left 5px
        &.close
            display none